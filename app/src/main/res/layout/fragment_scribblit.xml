<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/mainBlack"
    android:clickable="true"
    >

  <ImageView
      android:id="@+id/image_scribblit_fragment"
      app:layout_heightPercent = "50%"
      app:layout_widthPercent = "100%"
      android:src="@drawable/scribblit"
      />

  <TextView
      android:id="@+id/text_scribblit_fragment"
      android:layout_below="@id/image_scribblit_fragment"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="center_horizontal"
      android:textColor="@color/colorAndroid"
      android:fontFamily="sans-serif-smallcaps"
      android:textStyle="bold"
      android:textSize="25sp"
      android:text="\n&#8226; First Production App\n\n&#8226; Heavily Relied on TDD, RxJava, and Dagger 2\n\n&#8226; Wrote Usecases Within Uncle Bob's Architecture Pattern"/>

</android.support.percent.PercentRelativeLayout>
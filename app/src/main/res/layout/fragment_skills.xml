<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:clickable="true"
    >

  <ImageView
      android:id="@+id/image_trifecta"
      app:layout_widthPercent = "100%"
      app:layout_heightPercent = "20%"
      android:src="@drawable/trifecta"/>

  <TextView
      android:id="@+id/text_trifecta"
      android:layout_width="wrap_content"
      app:layout_heightPercent = "25%"
      android:textStyle="bold"
      android:textColor="#000000"
      android:textSize="20sp"
      android:layout_below="@id/image_trifecta"
      android:fontFamily="sans-serif-smallcaps"
      android:gravity="center_horizontal"
      android:text="&#8226;Know HTML/CSS Language within and without Bootstrap Framework \n
&#8226; Able to use RestCalls for Dynamic Page Structures \n
&#8226; Know JavaScript language Fundamentals"/>

  <ImageView
      android:id="@+id/image_bifecta"
      app:layout_widthPercent = "100%"
      app:layout_heightPercent = "20%"
      android:src="@drawable/bifecta"
      android:layout_below="@id/text_trifecta"/>

  <TextView
      android:id="@+id/text_bifecta"
      android:layout_width="wrap_content"
      app:layout_heightPercent = "25%"
      android:textStyle="bold"
      android:textSize="20sp"
      android:textColor="#000000"
      android:layout_below="@id/image_bifecta"
      android:fontFamily="sans-serif-smallcaps"
      android:gravity="center_horizontal"
      android:text="&#8226;Know Java and Android Languages at Production Level\n
&#8226; Very Comfortable with RxJava, Dagger2, MVP, TDD \n
&#8226; Capable of Implementing RestCalls for Dynamic Applications"/>

</android.support.percent.PercentRelativeLayout>
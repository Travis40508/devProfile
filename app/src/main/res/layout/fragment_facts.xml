<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:clickable="true"
    >

  <ImageView
      app:layout_marginTopPercent="3%"
      android:id="@+id/image_technophile"
      android:src="@drawable/technophile"
      android:layout_width="match_parent"
      app:layout_heightPercent = "20%"/>

  <TextView
      app:layout_marginTopPercent="3%"
      android:id="@+id/text_technophile"
      android:layout_centerHorizontal="true"
      android:fontFamily="sans-serif-smallcaps"
      android:textStyle="bold"
      android:textSize="30sp"
      android:layout_below="@id/image_technophile"
      android:text="Technophile"
      android:textColor="#000000"
      android:layout_width="wrap_content"/>

  <ImageView
      app:layout_marginTopPercent="3%"
      android:id="@+id/image_nature"
      android:src="@drawable/nature"
      android:layout_width="match_parent"
      app:layout_heightPercent = "20%"
      android:layout_below="@id/text_technophile"/>

  <TextView
      app:layout_marginTopPercent="3%"
      android:id="@+id/text_nature"
      android:layout_centerHorizontal="true"
      android:fontFamily="sans-serif-smallcaps"
      android:textStyle="bold"
      android:textSize="30sp"
      android:layout_below="@id/image_nature"
      android:text="Nature Lover"
      android:textColor="#000000"
      android:layout_width="wrap_content"/>

  <ImageView
      app:layout_marginTopPercent="3%"
      android:id="@+id/image_retro"
      android:src="@drawable/retro"
      android:layout_width="match_parent"
      app:layout_heightPercent = "20%"
      android:layout_below="@id/text_nature"/>

  <TextView
      app:layout_marginTopPercent="3%"
      android:id="@+id/text_retro"
      android:layout_centerHorizontal="true"
      android:fontFamily="sans-serif-smallcaps"
      android:textStyle="bold"
      android:textSize="30sp"
      android:layout_below="@id/image_retro"
      android:text="Retro Gamer"
      android:textColor="#000000"
      android:layout_width="wrap_content"/>

</android.support.percent.PercentRelativeLayout>
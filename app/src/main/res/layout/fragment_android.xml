<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    >

  <TextView
      android:id="@+id/title_android"
      android:textSize="50sp"
      android:text="ANDROID"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:textColor="#000000"
      android:textStyle="bold"
      android:fontFamily="serif-monospace"
      />

  <android.support.percent.PercentRelativeLayout
      app:layout_widthPercent = "30%"
      app:layout_heightPercent = "20%"
      app:layout_marginTopPercent="25%"
      app:layout_marginLeftPercent="10%"
      android:background="@drawable/rectangle">


    <ImageView
        android:id="@+id/image_restaurant"
        android:src="@drawable/ic_restaurant"
        app:layout_widthPercent = "100%"
        app:layout_heightPercent = "80%"

        />

    <TextView
        android:id="@+id/text_restaurant"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        app:layout_heightPercent="18%"
        android:text="Restaurant"
        android:layout_below="@+id/image_restaurant"
        android:textColor="#000000"


        />
  </android.support.percent.PercentRelativeLayout>

  <android.support.percent.PercentRelativeLayout
      app:layout_widthPercent = "30%"
      app:layout_heightPercent = "20%"
      app:layout_marginTopPercent="25%"
      app:layout_marginLeftPercent="60%"
      android:background="@drawable/rectangle">


    <ImageView
        android:id="@+id/image_tekesports"
        android:src="@drawable/ic_tekesports"
        app:layout_widthPercent = "100%"
        app:layout_heightPercent = "80%"

        />

    <TextView
        android:id="@+id/text_tekesports"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        app:layout_heightPercent="18%"
        android:text="TekeSports"
        android:layout_below="@+id/image_tekesports"
        android:textColor="#000000"


        />
  </android.support.percent.PercentRelativeLayout>

  <android.support.percent.PercentRelativeLayout
      app:layout_widthPercent = "30%"
      app:layout_heightPercent = "20%"
      app:layout_marginTopPercent="55%"
      app:layout_marginLeftPercent="10%"
      android:background="@drawable/rectangle">


    <ImageView
        android:id="@+id/image_scribblit"
        android:src="@drawable/ic_scribblit"
        app:layout_widthPercent = "100%"
        app:layout_heightPercent = "80%"

        />

    <TextView
        android:id="@+id/text_scribblit"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        app:layout_heightPercent="18%"
        android:text="Scribblit"
        android:layout_below="@+id/image_scribblit"
        android:textColor="#000000"


        />
  </android.support.percent.PercentRelativeLayout>

  <android.support.percent.PercentRelativeLayout
      app:layout_widthPercent = "30%"
      app:layout_heightPercent = "20%"
      app:layout_marginTopPercent="55%"
      app:layout_marginLeftPercent="60%"
      android:background="@drawable/rectangle">


    <ImageView
        android:id="@+id/image_powermap"
        android:src="@drawable/ic_powermap"
        app:layout_widthPercent = "100%"
        app:layout_heightPercent = "80%"

        />

    <TextView
        android:id="@+id/text_powermap"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        app:layout_heightPercent="18%"
        android:text="PowerMap"
        android:layout_below="@+id/image_powermap"
        android:textColor="#000000"


        />
  </android.support.percent.PercentRelativeLayout>




</android.support.percent.PercentRelativeLayout>
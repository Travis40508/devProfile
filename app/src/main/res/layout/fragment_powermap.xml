<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/mainWhite"
    android:clickable="true"
    >

  <ImageView
      android:id="@+id/image_powermap_fragment"
      app:layout_heightPercent = "50%"
      app:layout_widthPercent = "100%"
      android:src="@drawable/powermap"
      />

  <TextView
      android:id="@+id/text_powermap_fragment"
      android:layout_below="@id/image_powermap_fragment"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="center_horizontal"
      android:textColor="@color/mainBlack"
      android:fontFamily="sans-serif-smallcaps"
      android:textStyle="bold"
      android:textSize="25sp"
      android:text="\n&#8226; Second Production App\n\n&#8226; Helped Implement State Service Architecture using MVP Pattern and RxJava\n\n&#8226; Relied Heavily on Fragment Layer Control"/>

</android.support.percent.PercentRelativeLayout>